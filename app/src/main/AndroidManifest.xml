<?xml version="1.0" encoding="utf-8"?>
<manifest package="edu.uark.uarkregisterapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LandingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductsListingActivity"
            android:label="@string/title_activity_products_listing"
            android:parentActivityName=".LandingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uark.uarkregisterapp.LandingActivity"/>
        </activity>
        <activity
            android:name=".CartViewActivity"
            android:label="@string/title_activity_cart_view"
            android:parentActivityName=".LandingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uark.uarkregisterapp.LandingActivity"/>
        </activity>
        <activity
            android:name=".ProductViewActivity"
            android:label="@string/title_activity_product_view"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".CreateEmployeeActivity"
            android:label="@string/title_activity_create_employee"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>